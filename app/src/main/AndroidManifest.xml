<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unis.javieralvarez.connectfour">

    <application
        android:allowBackup="true"
        android:icon="@drawable/connect4logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/connect4logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.ConnectFourGameActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TutorialActivity"></activity>
    </application>

</manifest>